@using AwesomeForum.Data.ViewModels
@model NewTopicVM


@{
    ViewData["Title"] = "Create New Topic -";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="ForumId" class="control-label"></label>
                    <select asp-for="ForumId" asp-items="ViewBag.Forums" class="form-control">
                    </select>
                    <span asp-validation-for="ForumId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label asp-for="MessageText" class="control-label"></label>
                    <textarea asp-for="MessageText" class="form-control"></textarea>
                    <span asp-validation-for="MessageText" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
                <a class="btn btn-outline-secondary float-right" asp-controller="Home" asp-action="Index">Home</a>
            </div>

        </form>
    </div>
</div>